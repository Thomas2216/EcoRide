{% extends 'base.html.twig' %}

{% block title %}Ecoride{% endblock %}

{% block body %}
<main>
    <h2>Saisir un nouveau voyage</h2>
    <form method="post" action="{{ path ('app_saisir_covoiturage') }}">
        <div>
            <label for="departure">Lieu de d√©part:</label>
            <input type="text" id="departure" name="departure" required>
        </div>
        <div>
            <label for="destination">Lieu de destination:</label>
            <input type="text" id="destination" name="destination" required>
        </div>
        <div>
            <label for="date">Date du voyage:</label>
            <input type="date" id="date" name="date" required>
        </div>
        <div>
            <label for="seats">Nombre de places disponibles:</label>
            <input type="number" id="seats" name="seats" min="1" required>
        </div>
        <div>
            <button type="submit">Proposer le voyage</button>
        </div>
    </form>
</main>
{% endblock %} 