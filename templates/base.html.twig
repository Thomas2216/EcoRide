<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
<header>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">

            <img class="logo" src="{{ asset('Images/logo-ecoride.png') }}" alt="Logo Ecoride" width="85" height="85">

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_covoiturages') }}">Accès aux covoiturages</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_connexion') }}">Connexion</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>

                </ul>

                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Où allez-vous ?">
                    <button class="btn btn-outline-success" type="submit">Rechercher</button>
                </form>
            </div>

        </div>
    </nav>
</header>

{% block body %}{% endblock %}

<footer class="text-center mt-5 p-3 bg-dark text-white">
    <div>
        <img src="{{ asset('Images/facebook-icon.png') }}" width="24">
        <a href="https://www.facebook.com/" class="text-warning">Facebook</a>
    </div>

    <div>
        <img src="{{ asset('Images/instagram-icon.png') }}" width="24">
        <a href="https://www.instagram.com/" class="text-warning">Instagram</a>
    </div>

    <div>
        <a href="mailto:valle_thomas@hotmail.fr" class="text-warning">Mail</a>
    </div>

    <div>
        <a href="{{ path('app_mentions_legales') }}" class="text-warning">Mentions légales</a>
    </div>

    <p class="mt-3">&copy; 2025 EcoRide. Tous droits réservés.</p>
</footer>

</body>
</html>
